<%- include('partials/_head') %>

    <%- include('partials/_header') %>

    <main>
                <h1>Modifier le catcheur</h1>
        <form action="/admin/wrestler/edit" method="POST">
            <label for="name">Nom :</label>
            <input type="text" id="name" name="name" value="<%= wrestler.name %>"><br>

            <label for="slug">Slug :</label>
            <input type="text" id="slug" name="slug" value="<%= wrestler.slug %>"><br>

            <label for="id">ID :</label>
            <input type="text" id="id" name="id" value="<%= wrestler.id %>" readonly><br>

            <button type="submit">Modifier</button>
        </form>
        <form action="/admin/wrestler/delete" method="POST" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce catcheur ?')">
            <input type="hidden" name="id" value="<%= wrestler.id %>">
            <button type="submit">Supprimer</button>
        </form>
    </main>



        <%- include('partials/_footer') %>