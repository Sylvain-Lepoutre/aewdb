<!DOCTYPE html>
<html lang="fr">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/reset.css">
    <link rel="stylesheet" href="/css/style.css">
    <title>Accueil - All Elite Wrestling</title>
</head>

<body>
    <div class="page">
        <header class="header">
            <h1 class="header__title">All Elite Wrestling</h1>
            <nav class="header__nav">
                <ul class="nav__list">
                    <li class="nav__item"><a href="/roster">Roster complet</a></li>
                    <li class="nav__item"><a href="/shows">Liste des shows</a></li>
                </ul>
            </nav>
        </header>
        <main>
            <section class="content">
                <h2 class="content__title">All Elite Wrestling Champions</h2>
                <div class="block__container">
                    <% for (const championship of championships) { %>
                            <% if (championship.Wrestlers.length===3) { %>
                                <div class="block">
                                    <h3 class="block__title">
                                        <%= championship.title %>
                                    </h3>
                                <div class="card__container">
                                    <% for (const championshipWrestler of championship.Wrestlers) { %>
                                        <div class="card">
                                            <h3 class="card__title">
                                                <%= championshipWrestler.name %>
                                            </h3>
                                            <img src="img/ph.png" alt="" srcset="">
                                        </div>
                                        <% } %>
                                </div>
                                </div>
                                <% } else if (championship.Wrestlers.length===2) { %>
                                    <div class="card__container">
                                        <% for (const championshipWrestler of championship.Wrestlers) { %>
                                            <div class="card">
                                                <h3 class="card__title">
                                                    <%= championshipWrestler.name %>
                                                </h3>
                                                <img src="img/ph.png" alt="" srcset="">
                                            </div>
                                            <% } %>
                                    </div>
                                    <% } else { %>
                                        <div class="card__container">
                                            <div class="card">
                                                <h3 class="card__title">
                                                    <%= championship.Wrestlers[0].name %>
                                                </h3>
                                                <img src="img/ph.png" alt="" srcset="">
                                            </div>
                                        </div>
                                        <% } %>
                        </div>
                        <% } %>
           
            </section>
        </main>
    </div>
</body>

</html>